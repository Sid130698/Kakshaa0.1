<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnouncementFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/topTextAnnFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4fff3"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#8617232a"
            android:text="Notices"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textSize="40sp"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/notticebck"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"


            />
    </LinearLayout>



    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@id/topTextAnnFrag"
        android:id="@+id/announcementsFragRecyclerView"/>

</RelativeLayout>