<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:background="#f1f7f6"
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:src="@drawable/addpostbck"
            android:layout_marginBottom="19dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addAnnouncementButton"
            android:text="Add Announcement"
            android:textColor="#2e73c2"
            android:fontFamily="@font/nunito"
            android:background="@drawable/for_edit_text_bck"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Or"
            android:visibility="gone"
            android:id="@+id/orInAddPost"
            android:textSize="36sp"
            android:layout_margin="24dp"
            android:textColor="@color/black"/>
        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addAssignmentButton"
            android:fontFamily="@font/nunito"
            android:visibility="gone"
            android:textColor="#2e73c2"
            android:background="@drawable/for_edit_text_bck"
            android:text="Add Assignment"/>
    </LinearLayout>

</RelativeLayout>